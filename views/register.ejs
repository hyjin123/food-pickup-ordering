<body>
  <!-- Scroll to the top button -->
  <button id="toggle-button" hidden>
    <i class="fas fa-angle-double-up"></i>
  </button>
  <!-- Top nav bar (fixed) -->
  <nav>
    <div id="logo"><img id="logo" src="/images/cupcake.png">Cup N' CakeZ</div>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link" href="/api/users/login">LOGIN</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/api/users/register">REGISTER</a>
      </li>
    </ul>
  </nav>
  <!-- main container of the page -->
      <main class="register-main">
      <container></container>
      <h3>Create Account</h3>
      <form class="register-form" action="register" method="POST">
        <container>
        <div class="register-left">
          <br><label>Name</label>
          <input class="form-control" name="name" placeholder="Enter your name" maxlength="255" style="width: 300px">
          <br><label>Phone Number</label>
          <input class="form-control" type="tel" name="phone_number" maxlength="255" style="width: 300px" value="+1">
          <br><label>Email Address</label>
          <input class="form-control" name="email" type="email" placeholder="Enter email" maxlength="255" style="width: 300px">
          <br><label>Password</label>
          <input class="form-control" name="password" type="password" placeholder="Password" style="width: 300px">
        </div>
          <div class="register-right">
        <br><label>Address</label>
        <input class="form-control" name="address" placeholder="Address" maxlength="255" style="width: 300px">
        <br><label>City</label>
        <input class="form-control" name="city" placeholder="City" maxlength="255" style="width: 300px">
        <br><label>Province</label>
        <input class="form-control" name="province" placeholder="Province" maxlength="255" style="width: 300px">
        <br><label>Postal Code</label>
        <input class="form-control" name="postal_code" placeholder="Postal Code" maxlength="255" style="width: 300px">
        <br>
        </div>
      </container>
        <button type="submit" class="btn btn-primary register-button">Register</button>
      </form>
      <br><p> Already have an account? <a href="/api/users/login">Login</a></p>
    </main>

  <footer>

  </footer>
</body>

