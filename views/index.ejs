<body>
  <!-- Scroll to the top button -->
  <button id="toggle-button" hidden>
    <i class="fas fa-angle-double-up"></i>
  </button>
  <!-- Top nav bar (fixed) -->
  <nav>
    <div id="logo">
      <span>Cupcakez</span>
    </div>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link" href="#">LOGIN</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">REGISTER</a>
      </li>
    </ul>
  </nav>
  <!-- main container of the page -->
  <main id="main-container">
    <!-- search bar and the menu section -->
    <section id="section-container1">
      <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
        <label for="floatingTextarea">Search</label>
        <button type="button" class="btn btn-primary">Search</button>
      </div>
      <div id="menu" class="row row-cols-1 row-cols-md-3 g-4">
        <!-- ALL the menu items are appended here using jQuery -->
      </div>
    </section>

    <!-- order summary section -->
    <section class ="card" id="section-container2">
       <div class="card-body">
         <h5 class="card-title">CART SUMMARY</h5>
         <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
       </div>
       <ul class="list-group list-group-flush items">
         <li class="list-group-item">An item</li>
         <li class="list-group-item">A second item</li>
         <li class="list-group-item">A third item</li>
       </ul>
       <div class="card-body order-button">
        <button type="button" class="btn btn-primary">ORDER NOW $16</button>
       </div>
    </section>

  </main>

  <footer>

  </footer>
